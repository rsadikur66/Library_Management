@model IEnumerable<Library_Web_Front.Models.AuthorViewModel>
@{
    ViewData["Title"] = "Home Page";
}


<h1>Authors List</h1>

<p style="text-align:right;margin-right:20px;">
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>


<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AuthorBio)
                </th>
               
                <th></th>
                <th>Edit Action</th>
                <th>Details Action</th>
                <th>Delete Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AuthorBio)
                    </td>
                    
                    <td>
                    <td class="text-center">
                        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-authorId="@item.AuthorId">Edit</a>
                    </td>
                   
                    <td class="text-center">
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-authorId="@item.AuthorId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
